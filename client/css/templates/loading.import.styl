// Loading
$durationLoading = 0.3s

.loading
  position relative
  // top 0
  // right 0
  // bottom auto
  // left 0
  margin auto
  width 100%
  height 50px
  overflow hidden
  background-color: rgba($cor.red, 0.7)
  color: $cor.white
  backface-visibility hidden
  will-change transform, visibility

  visibility hidden
  transform translateY(-100%)
  transition transform $durationLoading, visibility 0s $durationLoading

  display flex
  justify-content center
  align-items center

  &:focus
    outline none

.loading--open
  visibility visible
  transform translate(0%)
  transition: transform $durationLoading
  z-index 1000
